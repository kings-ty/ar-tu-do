<?xml version="1.0" encoding="UTF-8"?>
<sdf version="1.4">
    <world name="simple_test">
        <scene>
            <shadows>1</shadows>
            <grid>1</grid>
            <origin_visual>1</origin_visual>
        </scene>
        
        <physics type="ode" default="true">
            <real_time_update_rate>1000</real_time_update_rate>
        </physics>

        <include>
            <uri>model://sun</uri>
        </include>
        
        <include>
            <uri>model://ground_plane</uri>
        </include>
        
        <!-- Simple racing track made with basic shapes -->
        <model name="simple_track">
            <pose>0 0 0.01 0 0 0</pose>
            <static>true</static>
            
            <!-- Track surface -->
            <link name="track_surface">
                <visual name="track_visual">
                    <geometry>
                        <box>
                            <size>20 10 0.02</size>
                        </box>
                    </geometry>
                    <material>
                        <script>
                            <name>Gazebo/Grey</name>
                        </script>
                    </material>
                </visual>
                <collision name="track_collision">
                    <geometry>
                        <box>
                            <size>20 10 0.02</size>
                        </box>
                    </geometry>
                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
            </link>
            
            <!-- Left wall -->
            <link name="left_wall">
                <pose>0 5 0.5 0 0 0</pose>
                <visual name="left_wall_visual">
                    <geometry>
                        <box>
                            <size>20 0.2 1</size>
                        </box>
                    </geometry>
                    <material>
                        <script>
                            <name>Gazebo/Red</name>
                        </script>
                    </material>
                </visual>
                <collision name="left_wall_collision">
                    <geometry>
                        <box>
                            <size>20 0.2 1</size>
                        </box>
                    </geometry>
                </collision>
            </link>
            
            <!-- Right wall -->
            <link name="right_wall">
                <pose>0 -5 0.5 0 0 0</pose>
                <visual name="right_wall_visual">
                    <geometry>
                        <box>
                            <size>20 0.2 1</size>
                        </box>
                    </geometry>
                    <material>
                        <script>
                            <name>Gazebo/Red</name>
                        </script>
                    </material>
                </visual>
                <collision name="right_wall_collision">
                    <geometry>
                        <box>
                            <size>20 0.2 1</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        
        <gui>
            <camera name="user_camera">
                <pose>-10 0 15 0 0.7 0</pose>
            </camera>
        </gui>
    </world>
</sdf>