<?xml version="1.0"?>
<robot name="racer">

  <!-- Base Link -->
  <link name="base_link"/>

  <!-- Chassis -->
  <joint name="base_link_joint" type="fixed">
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="chassis"/>
  </joint>

  <link name="chassis">
    <inertial>
      <mass value="3.5"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0"
               iyy="0.106208333333" iyz="0"
               izz="0.106208333333"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///home/ty/f1test_ws/ar-tu-do/ros_ws/install/racer_description/share/racer_description/meshes/car.dae"/>
      </geometry>
      <material name="car_material">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.49 0.18 0.1"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="chassis">
    <material>Gazebo/Orange</material>
  </gazebo>

  <!-- Rear Left Wheel -->
  <joint name="left_wheel_back_hinge" type="continuous">
    <origin xyz="-0.16 0.1055 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="left_wheel_back"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="500"/>
  </joint>

  <link name="left_wheel_back">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0"
               iyy="0.000526666666667" iyz="0"
               izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="left_wheel_back">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Rear Right Wheel -->
  <joint name="right_wheel_back_hinge" type="continuous">
    <origin xyz="-0.16 -0.1055 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="right_wheel_back"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="500"/>
  </joint>

  <link name="right_wheel_back">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0"
               iyy="0.000526666666667" iyz="0"
               izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="right_wheel_back">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Left Steering -->
  <joint name="left_steering_hinge" type="revolute">
    <origin xyz="0.16 0.1055 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="left_steering"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-1.0" upper="1.0" velocity="100"/>
  </joint>

  <link name="left_steering">
    <inertial>
      <mass value="0.07"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000583333333" ixy="0" ixz="0"
               iyy="0.0000583333333" iyz="0"
               izz="0.0001225"/>
    </inertial>
  </link>

  <!-- Front Left Wheel -->
  <joint name="left_wheel_front_hinge" type="continuous">
    <origin xyz="0.001 0.02 0" rpy="0 0 0"/>
    <parent link="left_steering"/>
    <child link="left_wheel_front"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="500"/>
  </joint>

  <link name="left_wheel_front">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0"
               iyy="0.000526666666667" iyz="0"
               izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="left_wheel_front">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Right Steering -->
  <joint name="right_steering_hinge" type="revolute">
    <origin xyz="0.16 -0.1055 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="right_steering"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" lower="-1.0" upper="1.0" velocity="100"/>
  </joint>

  <link name="right_steering">
    <inertial>
      <mass value="0.07"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000583333333" ixy="0" ixz="0"
               iyy="0.0000583333333" iyz="0"
               izz="0.0001225"/>
    </inertial>
  </link>

  <!-- Front Right Wheel -->
  <joint name="right_wheel_front_hinge" type="continuous">
    <origin xyz="0.001 -0.02 0" rpy="0 0 0"/>
    <parent link="right_steering"/>
    <child link="right_wheel_front"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="500"/>
  </joint>

  <link name="right_wheel_front">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0"
               iyy="0.000526666666667" iyz="0"
               izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
      <material name="wheel_material">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.045"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="right_wheel_front">
    <mu1>0.9</mu1>
    <mu2>0.9</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Camera -->
  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0"/>
    <origin xyz="0.21 0 0.095" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera"/>
  </joint>

  <link name="camera">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.0000416666667" ixy="0" ixz="0"
               iyy="0.0000416666667" iyz="0"
               izz="0.0000416666667"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.17 0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///home/ty/f1test_ws/ar-tu-do/ros_ws/install/racer_description/share/racer_description/meshes/ZED.dae"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- Laser -->
  <joint name="laser_joint" type="fixed">
    <axis xyz="0 1 0"/>
    <origin xyz="0.21 0 0.135" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="laser"/>
  </joint>

  <link name="laser">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.0000416666667" ixy="0" ixz="0"
               iyy="0.0000416666667" iyz="0"
               izz="0.0000416666667"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file:///home/ty/f1test_ws/ar-tu-do/ros_ws/install/racer_description/share/racer_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="laser">
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- IMU -->
  <joint name="imu_joint" type="fixed">
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0.135" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="imu_link"/>
  </joint>

  <link name="imu_link"/>

  <!-- Gazebo Ackermann Drive Plugin -->
  <gazebo>
    <plugin name="gazebo_ros_ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <namespace>racer</namespace>
        <remapping>cmd_vel:=/commands/drive_param</remapping>
      </ros>

      <!-- wheels -->
      <rear_left_joint>left_wheel_back_hinge</rear_left_joint>
      <rear_right_joint>right_wheel_back_hinge</rear_right_joint>
      <front_left_joint>left_wheel_front_hinge</front_left_joint>
      <front_right_joint>right_wheel_front_hinge</front_right_joint>

      <!-- steering -->
      <left_steering_joint>left_steering_hinge</left_steering_joint>
      <right_steering_joint>right_steering_hinge</right_steering_joint>

      <!-- max steer angle -->
      <max_steer>1.0</max_steer>

      <!-- kinematic -->
      <wheel_separation>0.211</wheel_separation>
      <wheel_base>0.32</wheel_base>

      <!-- limits -->
      <max_wheel_torque>1000</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>
  </gazebo>

  <!-- Camera Plugin -->
  <gazebo reference="camera">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <frame_name>camera</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Laser Plugin -->
  <gazebo reference="laser">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=laser/scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <!-- IMU Plugin -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <remapping>~/out:=imu</remapping>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
      </plugin>
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

</robot>